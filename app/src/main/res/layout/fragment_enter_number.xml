<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


        <LinearLayout
            android:id="@+id/enterNumberContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/home_top"

                >
                <TextView
                    android:id="@+id/enterNumberTopWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone number"
                    android:textSize="22sp"
                    android:fontFamily="@font/alegreya"
                    android:textColor="#ffffff"
                    android:gravity="center_horizontal"
                    android:layout_margin="8dp"
                    app:drawableStartCompat="@drawable/ic_keyboard_arrow_left_white_24dp" />
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:fontFamily="@font/alegreya"
                android:text="We will send a code to verify your mobile number"
                android:textColor="#474747"
                android:textSize="17sp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0554xxxxxx"
                android:padding="8dp"
                app:endIconMode="clear_text"
                app:boxCornerRadiusTopStart="4dp"
                app:boxCornerRadiusTopEnd="4dp"
                app:boxCornerRadiusBottomStart="4dp"
                app:boxCornerRadiusBottomEnd="4dp"
                app:helperTextEnabled="true"
                app:helperText="For puchase confirmation"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:startIconDrawable="@drawable/ic_baseline_local_phone_24"
                app:startIconContentDescription="contact"
                android:layout_margin="16dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/enterNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:fontFamily="@font/alegreya"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/enterNumberContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="32dp"
                android:backgroundTint="#A386E1"
                android:fontFamily="@font/alegreya"
                android:text="Continue"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_margin="16dp"
                android:padding="8dp"
                android:textSize="20sp"
                android:textStyle="bold"
                />

        </LinearLayout>






</androidx.coordinatorlayout.widget.CoordinatorLayout>


