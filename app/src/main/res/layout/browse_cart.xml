<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="6"
    android:layout_margin="8dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="8dp"
        >
        <ImageView
            android:id="@+id/cartImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_launcher_foreground"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cartDesc"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/cartName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/alegreya"
            android:text="Black Shoe"
            android:textColor="#909090"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/alegreya"
            android:text="Material"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/cartMaterial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#909090"
            android:fontFamily="@font/alegreya"
            android:text="Yark Leather"

            />

        <TextView
            android:id="@+id/cartPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya"
            android:textSize="18sp"
            android:text="GHÂ¢ 80.00"
            android:layout_marginTop="7sp"
            android:textColor="#474747"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/cartCancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_remove_shopping_cart_black_24dp"
            android:layout_gravity="right"
            android:layout_margin="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_margin="8dp">
            <TextView
                android:id="@+id/cartPriceMultiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/alegreya"
                android:textColor="#474747"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/cartUp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_up_24"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    />

                <ImageView
                    android:id="@+id/cartDown"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>

