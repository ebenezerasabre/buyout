<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/filter_body">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center_horizontal"
          android:layout_marginBottom="20dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:background="@drawable/filter_top"
              android:gravity="center">
              <TextView
                  android:id="@+id/filterIntro"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Welcome"
                  android:fontFamily="@font/caudex"
                  android:textSize="24sp"
                  android:textColor="#fff" />
          </LinearLayout>

          <TextView
              android:id="@+id/filterMsg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="This is the region for msg"
              android:gravity="center_horizontal"
              android:padding="8dp"
              android:layout_margin="16dp"
              />

          <TextView
              android:id="@+id/filterSignIn"
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:text="Sign in"
              android:background="@drawable/filter_inside"
              android:layout_margin="8dp"
              android:textAllCaps="false"
              android:fontFamily="@font/caudex"
              android:textSize="18sp"
              android:textColor="#333333"
              android:gravity="center_horizontal"
              android:padding="8dp"
              />

          <TextView
              android:id="@+id/filterSignOut"
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:text="Sign out"
              android:background="@drawable/filter_inside"
              android:layout_margin="8dp"
              android:textAllCaps="false"
              android:fontFamily="@font/caudex"
              android:textSize="18sp"
              android:textColor="#333333"
              android:gravity="center_horizontal"
              android:padding="8dp"
              />


          <TextView
              android:id="@+id/filterNews"
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:text="News"
              android:background="@drawable/filter_inside"
              android:layout_margin="8dp"
              android:textAllCaps="false"
              android:fontFamily="@font/caudex"
              android:textSize="18sp"
              android:textColor="#333333"
              android:gravity="center_horizontal"
              android:padding="8dp"
              />

          <TextView
              android:id="@+id/filterAboutUs"
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:text="About us"
              android:background="@drawable/filter_inside"
              android:layout_margin="8dp"
              android:textAllCaps="false"
              android:fontFamily="@font/caudex"
              android:textSize="18sp"
              android:textColor="#333333"
              android:gravity="center_horizontal"
              android:padding="8dp"
              />

          <TextView
              android:id="@+id/filterGoToOrder"
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:text="Go to order"
              android:background="@drawable/filter_inside"
              android:layout_margin="8dp"
              android:textAllCaps="false"
              android:fontFamily="@font/caudex"
              android:textSize="18sp"
              android:textColor="#333333"
              android:gravity="center_horizontal"
              android:padding="8dp"
              />

          <Button
              android:id="@+id/filterOk"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Ok"
              android:layout_margin="16dp"
              android:background="@drawable/filter_ok"
              android:textColor="#f2f2f2"
              android:fontFamily="@font/andika"
              android:textSize="18sp"
              android:textAllCaps="false"
              />


          <LinearLayout
              android:id="@+id/filterFromEwQuest"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_gravity="center">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="From"
                  android:textSize="16sp"
                  android:fontFamily="@font/andada"
                  android:textColor="#000000" />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="ewQuest"
                  android:textSize="24sp"
                  android:fontFamily="@font/alegreya"
                  android:textColor="#C045D0"
                  android:layout_marginStart="8dp" />
          </LinearLayout>


      </LinearLayout>
  </ScrollView>

</LinearLayout>