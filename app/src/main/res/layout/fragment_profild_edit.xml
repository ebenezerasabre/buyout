<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/home_top">
                    <TextView
                        android:id="@+id/editProfileTopWord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit profile"
                        android:textSize="22sp"
                        android:fontFamily="@font/alegreya"
                        android:textColor="#ffffff"
                        android:gravity="center_horizontal"
                        android:drawableStart="@drawable/ic_keyboard_arrow_left_white_24dp"
                        android:layout_margin="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/editProfileView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp"
                    >
                    <TextView
                        android:id="@+id/editProfileWarning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alegreya"
                        android:textSize="20sp"
                        android:text="warming"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_horizontal"
                        android:visibility="gone"
                        />



                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="firstname"
                        android:padding="8dp"
                        app:endIconMode="clear_text"
                        app:boxCornerRadiusTopStart="4dp"
                        app:boxCornerRadiusTopEnd="4dp"
                        app:boxCornerRadiusBottomStart="4dp"
                        app:boxCornerRadiusBottomEnd="4dp"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:fontFamily="@font/alegreya"
                            android:textSize="18sp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="lastname"
                        android:padding="8dp"
                        app:endIconMode="clear_text"
                        app:boxCornerRadiusTopStart="4dp"
                        app:boxCornerRadiusTopEnd="4dp"
                        app:boxCornerRadiusBottomStart="4dp"
                        app:boxCornerRadiusBottomEnd="4dp"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:fontFamily="@font/alegreya"
                            android:textSize="18sp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="email"
                        android:padding="8dp"
                        app:endIconMode="clear_text"
                        app:boxCornerRadiusTopStart="4dp"
                        app:boxCornerRadiusTopEnd="4dp"
                        app:boxCornerRadiusBottomStart="4dp"
                        app:boxCornerRadiusBottomEnd="4dp"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:fontFamily="@font/alegreya"
                            android:textSize="18sp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="number"
                        android:padding="8dp"
                        app:endIconMode="clear_text"
                        app:boxCornerRadiusTopStart="4dp"
                        app:boxCornerRadiusTopEnd="4dp"
                        app:boxCornerRadiusBottomStart="4dp"
                        app:boxCornerRadiusBottomEnd="4dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="10"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:fontFamily="@font/alegreya"
                            />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/saveEditedProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cornerRadius="32dp"
                        android:backgroundTint="#A386E1"
                        android:fontFamily="@font/alegreya"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:layout_margin="16dp"
                        android:padding="8dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_baseline_save_24"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/passView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="90dp"
                    >
                    <TextView
                        android:id="@+id/editProfilePasswordWarning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alegreya"
                        android:textSize="20sp"
                        android:text="warming"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_horizontal"
                        android:visibility="gone"
                        />



                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:endIconMode="password_toggle"
                        app:boxCornerRadiusTopStart="4dp"
                        app:boxCornerRadiusTopEnd="4dp"
                        app:boxCornerRadiusBottomStart="4dp"
                        app:boxCornerRadiusBottomEnd="4dp"
                        app:helperTextEnabled="true"
                        app:helperText="use strong password"
                        android:layout_margin="16dp"
                        app:startIconDrawable="@drawable/ic_outline_lock_24"
                        app:startIconContentDescription="password"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/confirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:fontFamily="@font/alegreya"
                            android:textSize="18sp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/confirmPasswordButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cornerRadius="32dp"
                        android:backgroundTint="#A386E1"
                        android:fontFamily="@font/alegreya"
                        android:text="Confirm password"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:layout_margin="16dp"
                        android:padding="8dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_verified_user_white_24dp"
                        />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>