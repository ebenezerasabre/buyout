<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/home_top">
                    <TextView
                        android:id="@+id/editProfileTopWord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit profile"
                        android:textSize="22sp"
                        android:fontFamily="@font/alegreya"
                        android:textColor="#ffffff"
                        android:gravity="center_horizontal"
                        android:drawableStart="@drawable/ic_keyboard_arrow_left_white_24dp"
                        android:layout_margin="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/editProfileView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp"
                    >
                    <TextView
                        android:id="@+id/editProfileWarning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alegreya"
                        android:textSize="20sp"
                        android:text="warming"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_horizontal"
                        android:visibility="gone"
                        />
                    <EditText
                        android:id="@+id/editFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:lines="1"
                        android:hint="firstname"
                        android:gravity="top"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/alegreya"
                        android:textSize="18sp"
                        />
                    <EditText
                        android:id="@+id/editLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:lines="1"
                        android:hint="lastname"
                        android:gravity="top"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/alegreya"
                        android:textSize="18sp"
                        />
                    <EditText
                        android:id="@+id/editEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textWebEmailAddress"
                        android:lines="1"
                        android:hint="email"
                        android:gravity="top"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/alegreya"
                        android:textSize="18sp"
                        />
                    <EditText
                        android:id="@+id/editPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:lines="1"
                        android:hint="Phone number"
                        android:gravity="top"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/alegreya"
                        android:textSize="18sp"
                        />
                    <Button
                        android:id="@+id/saveEditedProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="20dp"
                        android:padding="10dp"
                        android:text="Save"
                        android:fontFamily="@font/alegreya"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:backgroundTint="#A386E1"
                        app:icon="@drawable/ic_baseline_save_24"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/passView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="90dp"
                    >
                    <TextView
                        android:id="@+id/editProfilePasswordWarning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alegreya"
                        android:textSize="20sp"
                        android:text="warming"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_horizontal"
                        android:visibility="gone"
                        />
                    <EditText
                        android:id="@+id/confirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:hint="enter password"
                        android:gravity="top"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/alegreya"
                        android:textSize="18sp"
                        />
                    <Button
                        android:id="@+id/confirmPasswordButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:padding="10dp"
                        android:text="Confirm password"
                        android:fontFamily="@font/alegreya"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:backgroundTint="#A386E1"
                        app:icon="@drawable/ic_verified_user_white_24dp"
                        />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>